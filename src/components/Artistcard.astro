---
const { artist_img, artist_name, artist_description, artist_time, artist_spotify, } = Astro.props;
---

 <div class="about_container">
    <div class="grid_1-1-1">
          <div>
            <img class="artist_img" src={`../images//singleview/${artist_img}`} alt=" " />
          </div>
          <div>
              <h2>{artist_name}</h2>
          </div>
          <div class="info">
            <p>{artist_description}</p>
            <h3>{artist_time}</h3>
          </div>
    </div>
</div>
    <div class="spotify">
        <iframe>{artist_spotify}</iframe>
    </div> 

    <style>

        .about_container{
            margin-bottom:2rem;
            margin-left:1.5rem;
        }

        .grid_1-1-1{
            display:grid;
            grid-template-columns: 2fr 0.5fr;
        }

        .info{
            margin-top:1.5rem;
        }

        h3{
            margin-top:1rem;
        }

        h2{
            color:var(--secondary-color1)
        }

@media (min-width:750px) {

    .about_container{
            margin-bottom:5rem;
        }

.grid_1-1-1{
    display:grid;
    grid-template-columns: 2fr 0.5fr 2fr 1fr;
    margin-right:10rem;
}

.info{
    margin-top:0;
}

}
    </style>